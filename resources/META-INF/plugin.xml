<idea-plugin>
  <!-- 插件唯一id-->
  <id>com.zzq.plugin.smart.comment</id>
  <!-- 插件名称-->
  <name>Smart Comment</name>
  <!-- 插件版本-->
  <version>1.1</version>
  <!-- 依赖(上传到插件库必备)-->
  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.java</depends>
  <!-- 供应商邮箱和网址-->
  <vendor email="ly805830547@gmail.com" url="https://github.com/805830547/smart-comment">zhiqiangzhang</vendor>

  <!-- 插件描述-->
  <description><![CDATA[
      Generate java comments<br>
      Default hot key: Ctrl + Shift + M<br><br>
      Support: <br>
      1.Class comment<br>
      2.Method comment<br>
      3.Field comment<br>
      4.Inner class comment<br>
      5.Optional config<br>
      6.Comment inspection<br>
    ]]></description>


  <!-- 版本更新日志-->
  <change-notes><![CDATA[
      2021-02-05<br>
      -Comment inspection<br>
      -Optional config<br>
      2021-02-04<br>
      -Support inner class<br>
      2021-02-03<br>
      -Support field comment<br>
      2021-02-02<br>
      -Support method comment<br>
      2021-02-01<br>
      -Support class comment<br>
    ]]>
  </change-notes>

  <!-- 最低idea支持版本 -->
  <idea-version since-build="173.0"/>

  <!-- 扩展功能-->
  <extensions defaultExtensionNs="com.intellij">
    <projectService serviceInterface="SmartCommentConfig" serviceImplementation="SmartCommentConfig"/>
    <projectConfigurable groupId="editor" displayName="Smart Comment"
      id="preferences.SmartCommentPlugin" instance="SmartCommentPluginConfigurable"/>
    <localInspection language="JAVA" displayName="Smart Comment" groupPath="Java" groupBundle="messages.InspectionsBundle"
      groupKey="group.names.probable.bugs" enabledByDefault="true" level="WARNING" implementationClass="SmartCommentInspection"/>
  </extensions>

  <!-- 触发动作-->
  <actions>
    <action id="SmartCommentActionId" class="SmartCommentAction" text="Smart Comment" description="Smart Comment">
      <add-to-group group-id="EditSmartGroup" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="shift alt M"/>
    </action>
  </actions>

</idea-plugin>