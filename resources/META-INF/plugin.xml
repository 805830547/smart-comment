<idea-plugin>
  <!-- 插件唯一id-->
  <id>com.zzq.plugin.smart.comment</id>
  <!-- 插件名称-->
  <name>Smart Comment</name>
  <!-- 插件版本-->
  <version>1.0</version>

  <!-- 供应商邮箱和网址-->
  <vendor email="ly805830547@gmail.com" url="https://github.com/805830547/smart-comment">zhiqiangzhang</vendor>

  <!-- 插件描述-->
  <description><![CDATA[
      Generate java comments<br>
      Default hot key: Ctrl + Shift + M<br><br>
      Support: <br>
      1.Class comment<br>
      2.Method comment<br>
      3.Field comment<br>
    ]]></description>


  <!-- 版本更新日志-->
  <change-notes><![CDATA[
      1.2021-02-01<br>
      -Support class comment<br>
      2.2021-02-02<br>
      -Support method comment<br>
      3.2021-02-03<br>
      -Support field comment<br>
    ]]>
  </change-notes>

  <!-- 最低idea支持版本 -->
  <idea-version since-build="173.0"/>

  <!-- 扩展功能-->
  <extensions defaultExtensionNs="com.intellij">
    <projectService serviceInterface="SmartCommentConfig" serviceImplementation="SmartCommentConfig"/>
    <projectConfigurable groupId="editor" displayName="Smart Comment"
                         id="preferences.SmartCommentPlugin" instance="SmartCommentPluginConfigurable"/>
  </extensions>

  <!-- 触发动作-->
  <actions>
    <action id="SmartCommentActionId" class="SmartCommentAction" text="Smart Comment" description="Smart Comment">
      <add-to-group group-id="EditSmartGroup" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="shift alt M"/>
    </action>
  </actions>

</idea-plugin>